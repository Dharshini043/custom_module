<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employee_form_custom" model="ir.ui.view">
            <field name="name">hr.employee.form.custom</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='identification_id']" position="attributes">
                    <attribute name="string">Aadhar Number</attribute>
                </xpath>
                <xpath expr="//field[@name='ssnid']" position="attributes">
                    <attribute name="string">PAN No</attribute>
                </xpath>
            </field>
        </record>


    </data>

    <data>
        <record id="view_employee_tree_inherit_aadhar_pan" model="ir.ui.view">
            <field name="name">hr.employee.tree.inherit.aadhar.pan</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">

                <!-- Add Aadhar & PAN after Work Email -->
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="identification_id" string="Aadhar Number"/>
                    <field name="ssnid" string="PAN No"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
