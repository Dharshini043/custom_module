<odoo>
    <record id="employee_inherited_sequence_view" model="ir.ui.view">
        <field name="name">employee.inherited.sequence.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h1" position="before">
                <div class="oe_title">
                    <h1>
                        <field name="emp_seq"/>
                    </h1>
                </div>
            </xpath>
            <xpath expr="//field[@name='work_email']" position="before">
                <field name="nick_name"/>
            </xpath>

            <xpath expr="//field[@name='nick_name']" position="after">
                <field name="rfid_number"/>
            </xpath>

        </field>
    </record>

    <record id="view_employee_tree_inherit_nickname" model="ir.ui.view">
        <field name="name">hr.employee.list.inherit.nickname</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">

            <!-- Add Nick Name after Work Email -->
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="nick_name"/>
            </xpath>

        </field>
    </record>

</odoo>

